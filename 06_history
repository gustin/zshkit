HISTSIZE=1000
SAVEHIST=1000
HISTFILE=~/.history
APPEND_HISTORY=1
INC_APPEND_HISTORY=1
SHARE_HISTORY=1
HIST_IGNORE_DUPS=1
HIST_IGNORE_ALL_DUPS=1
HIST_EXPIRE_DUPS_FIRST=1
HIST_SAVE_NO_DUPS=1
HIST_FIND_NO_DUPS=1
HIST_IGNORE_SPACE=1
HIST_NO_STORE=1
HIST_NO_FUNCTIONS=1

# Grep the history with 'h'
h () { history 0 | grep $1 }
